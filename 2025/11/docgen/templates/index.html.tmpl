<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Package {{ .Name }}</title>
    <style>
        body { font-family: sans-serif; line-height: 1.6; padding: 2em; max-width: 800px; margin: 0 auto; }
        pre { background-color: #f4f4f4; padding: 1em; border-radius: 5px; }
        h2, h3 { border-bottom: 1px solid #ccc; padding-bottom: 5px; }
        a { color: #0366d6; }
    </style>
</head>
<body>
    <h1>Package {{ .Name }}</h1>
    <p>{{ .Doc }}</p>

    {{- if .Consts }}
    <h2>Constants</h2>
    <pre>{{ .Consts.Doc }}{{ range .Consts.Decl -}}
{{ . }}
{{ end }}</pre>
    {{- end }}

    {{- if .Vars }}
    <h2>Variables</h2>
    <pre>{{ .Vars.Doc }}{{ range .Vars.Decl -}}
{{ . }}
{{ end }}</pre>
    {{- end }}

    {{- if .Types }}
    <h2>Types</h2>
    <ul>
        {{- range .Types }}
        <li><a href="type_{{ .Name }}.html">{{ .Name }}</a></li>
        {{- end }}
    </ul>
    {{- end }}

    {{- if .Funcs }}
    <h2>Functions</h2>
    {{- range .Funcs }}
    <div>
        <pre>func {{ .Name }}{{ .Signature }}</pre>
        <p>{{ .Doc }}</p>
    </div>
    {{- end }}
    {{- end }}

</body>
</html>
