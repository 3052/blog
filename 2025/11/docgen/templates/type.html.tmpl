<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Type: {{ .Name }}</title>
    <style>
        body { font-family: sans-serif; line-height: 1.6; padding: 2em; max-width: 800px; margin: 0 auto; }
        pre { background-color: #f4f4f4; padding: 1em; border-radius: 5px; }
        h2, h3 { border-bottom: 1px solid #ccc; padding-bottom: 5px; }
        a { color: #0366d6; }
    </style>
</head>
<body>
    <p><a href="index.html">Back to Package</a></p>
    <h1>Type {{ .Name }}</h1>

    <pre>{{ .Decl }}</pre>
    <p>{{ .Doc }}</p>
    
    {{- if .Funcs }}
    <h2>Functions</h2>
    {{- range .Funcs }}
    <div>
        <pre>func {{ .Name }}{{ .Signature }}</pre>
        <p>{{ .Doc }}</p>
    </div>
    {{- end }}
    {{ end }}
    
    {{- if .Methods }}
    <h2>Methods</h2>
    {{- range .Methods }}
    <div>
        <pre>func ({{ .Recv }}) {{ .Name }}{{ .Signature }}</pre>
        <p>{{ .Doc }}</p>
    </div>
    {{- end }}
    {{ end }}
    
</body>
</html>
